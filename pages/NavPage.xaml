<Page
    x:Class="sap_gui.Pages.NavPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- Simple, clean tile template -->
        <DataTemplate x:Key="TileTemplate">
            <Button Click="TileButton_Click"
                    Style="{StaticResource ButtonRevealStyle}"
                    Margin="12"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">

                <StackPanel Orientation="Vertical" Spacing="12" Padding="20">
                    <Image Source="{Binding IconPath}"
                           Width="48"
                           Height="48"
                           HorizontalAlignment="Center"/>

                    <TextBlock Text="{Binding Title}"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               FontWeight="SemiBold"/>
                </StackPanel>

            </Button>
        </DataTemplate>

    </Page.Resources>


    <Grid Padding="24">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Navigation"
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="0 0 0 16"/>

        <GridView Grid.Row="1"
                  ItemsSource="{x:Bind TileItems}"
                  ItemTemplate="{StaticResource TileTemplate}"
                  SelectionMode="None"
                  IsItemClickEnabled="False">

            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid ItemWidth="260"
                                   ItemHeight="180"
                                   Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>

        </GridView>

    </Grid>
</Page>
