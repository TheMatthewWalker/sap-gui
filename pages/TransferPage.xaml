<Page
    x:Class="sap_gui.Pages.TransferPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowDefinitions="Auto,*" Padding="24">

        <!-- HEADER -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
            <Button Content="â† Back"
                    Click="Back_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    Width="80" />

            <TextBlock Text="Create Transfer"
                       FontSize="28"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20" Padding="8">

                <!-- CARD: Selected Item Details -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="16"
                        BorderBrush="#FFCCCCCC"
                        BorderThickness="1">
                    <StackPanel Spacing="16">

                        <TextBlock Text="Selected Item Details"
                                   FontSize="20"
                                   FontWeight="SemiBold"/>

                        <!-- Material + Batch + Storage Location -->
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Material" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding MATNR}" 
                                         x:Name="MATNR"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Batch" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding CHARG}" 
                                         x:Name="CHARG"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Storage Location" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding LGORT}" 
                                         x:Name="LGORT"/>
                            </StackPanel>
                        </Grid>

                        <!-- Quantity + Current Bin Type + Bin -->
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Quantity" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding GESME}"  
                                         x:Name="GESME"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Current Bin" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding LGPLA}" 
                                         x:Name="LGPLA"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Current Bin Type" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding LGTYP}" 
                                         x:Name="LGTYP"/>
                            </StackPanel>
                        </Grid>

                        
                        <!-- Category and Special stock -->
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Category" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding BESTQ}" 
                                         x:Name="BESTQ"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Special Stock Indicator" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding SOBKZ}"  
                                         x:Name="SOBKZ"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Special Stock Number" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding SONUM}"
                                         x:Name="SONUM"/>
                            </StackPanel>
                        </Grid>


                        <!-- DESTINATION BIN -->
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Destination Bin" FontWeight="SemiBold"/>
                                <TextBox x:Name="NLPLA" 
                                         PlaceholderText="Enter destination bin"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Destination Bin Type" FontWeight="SemiBold"/>
                                <TextBox x:Name="NLTYP" 
                                         PlaceholderText="Enter destination bin type"/>
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </Border>

                <!-- CREATE BUTTON -->
                <Button Content="Create Transfer"
                        Click="CreateTransfer_Click"
                        Height="48"
                        Style="{StaticResource AccentButtonStyle}"
                        HorizontalAlignment="Stretch"
                        FontSize="18"/>

                <!-- SAP RESULT MESSAGE -->
                <Border Background="#FFF5F5F5"
                        CornerRadius="8"
                        Padding="12"
                        BorderBrush="#FFCCCCCC"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="SAP Result" FontWeight="SemiBold"/>
                        <TextBox x:Name="SapResultBox"
                                 PlaceholderText=""
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="120"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
