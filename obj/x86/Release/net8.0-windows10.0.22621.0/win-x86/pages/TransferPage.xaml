<Page
    x:Class="sap_gui.Pages.TransferPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowDefinitions="Auto,*" Padding="24">

        <!-- HEADER -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
            <Button x:ConnectionId='15' Content="← Back"
                                      
                    Style="{StaticResource AccentButtonStyle}"
                    Width="80" />

            <TextBlock Text="Create Transfer"
                       FontSize="28"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20" Padding="8">

                <!-- CARD: Selected Item Details -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="16"
                        BorderBrush="#FFCCCCCC"
                        BorderThickness="1">
                    <StackPanel Spacing="16">

                        <TextBlock Text="Selected Item Details"
                                   FontSize="20"
                                   FontWeight="SemiBold"/>

                        <!-- Material + Batch + Storage Location -->
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Material" FontWeight="SemiBold"/>
                                <TextBox x:ConnectionId='14' Text="{Binding MATNR}" 
                                         x:Name="MATNR"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Batch" FontWeight="SemiBold"/>
                                <TextBox x:ConnectionId='13' Text="{Binding CHARG}" 
                                         x:Name="CHARG"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Storage Location" FontWeight="SemiBold"/>
                                <TextBox x:ConnectionId='12' Text="{Binding LGORT}" 
                                         x:Name="LGORT"/>
                            </StackPanel>
                        </Grid>

                        <!-- Quantity + Current Bin Type + Bin -->
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Quantity" FontWeight="SemiBold"/>
                                <TextBox x:ConnectionId='11' Text="{Binding GESME}"  
                                         x:Name="GESME"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Current Bin" FontWeight="SemiBold"/>
                                <TextBox x:ConnectionId='10' Text="{Binding LGPLA}" 
                                         x:Name="LGPLA"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Current Bin Type" FontWeight="SemiBold"/>
                                <TextBox x:ConnectionId='9' Text="{Binding LGTYP}" 
                                         x:Name="LGTYP"/>
                            </StackPanel>
                        </Grid>

                        
                        <!-- Category and Special stock -->
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Category" FontWeight="SemiBold"/>
                                <TextBox x:ConnectionId='8' Text="{Binding BESTQ}" 
                                         x:Name="BESTQ"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Special Stock Indicator" FontWeight="SemiBold"/>
                                <TextBox x:ConnectionId='7' Text="{Binding SOBKZ}"  
                                         x:Name="SOBKZ"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Special Stock Number" FontWeight="SemiBold"/>
                                <TextBox x:ConnectionId='6' Text="{Binding SONUM}"
                                         x:Name="SONUM"/>
                            </StackPanel>
                        </Grid>


                        <!-- DESTINATION BIN -->
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Destination Bin" FontWeight="SemiBold"/>
                                <TextBox x:ConnectionId='5' x:Name="NLPLA" 
                                         PlaceholderText="Enter destination bin"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Destination Bin Type" FontWeight="SemiBold"/>
                                <TextBox x:ConnectionId='4' x:Name="NLTYP" 
                                         PlaceholderText="Enter destination bin type"/>
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </Border>

                <!-- CREATE BUTTON -->
                <Button x:ConnectionId='2' Content="Create Transfer"
                                                    
                        Height="48"
                        Style="{StaticResource AccentButtonStyle}"
                        HorizontalAlignment="Stretch"
                        FontSize="18"/>

                <!-- SAP RESULT MESSAGE -->
                <Border Background="#FFF5F5F5"
                        CornerRadius="8"
                        Padding="12"
                        BorderBrush="#FFCCCCCC"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="SAP Result" FontWeight="SemiBold"/>
                        <TextBox x:ConnectionId='3' x:Name="SapResultBox"
                                 PlaceholderText=""
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="120"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

