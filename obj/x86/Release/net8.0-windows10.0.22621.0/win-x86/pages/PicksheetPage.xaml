<Page
    x:Class="sap_gui.Pages.PicksheetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowDefinitions="Auto,*" Padding="24">
        <!-- HEADER -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
            <Button x:ConnectionId='4' Content="← Back"
                                      
                    Style="{StaticResource AccentButtonStyle}"
                    Width="80" />

            <TextBlock Text="Pick Deliveries"
                       FontSize="28"
                       FontWeight="SemiBold" />
        </StackPanel>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20" Padding="8">

                <!-- Entry Card -->
                <StackPanel Spacing="12">

                    <TextBlock Text="Selected Item Details"
                               FontSize="20"
                               FontWeight="SemiBold"/>

                    <!-- Picksheet -->
                    <Border Background="White"
                    CornerRadius="12"
                    Padding="16"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Picksheet Number" />
                            <TextBox x:ConnectionId='3' x:Name="PicksheetBox" 
                                 PlaceholderText="Enter desired picksheet"/>
                        </StackPanel>
                    </Border>

                    <!-- CREATE BUTTON -->
                    <Button Content="Complete Picksheet"
                        Height="48"
                        Style="{StaticResource AccentButtonStyle}"
                        HorizontalAlignment="Stretch"
                        FontSize="18"/>
                </StackPanel>


                <!-- Result Card -->
                <Border Background="White"
                    CornerRadius="12"
                    Padding="16"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Picksheet Result" />
                        <TextBox x:ConnectionId='2' x:Name="PicksheetResultBox" 
                                 PlaceholderText="results will appear here..."/>
                    </StackPanel>
                </Border>

            </StackPanel>

        </ScrollViewer>
    </Grid>
</Page>

